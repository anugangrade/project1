
<div class="col-lg-12 wh_col">
  <h3 class="cr_gig">Forgot your password?</h3> 
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  	<%= devise_error_messages! %>

    <div class="full_gig_blog top_80">
      <div class="labels">EMAIL</div>
      <div class="fields">
        <%= f.email_field :email, autofocus: true, :placeholder=>"Email" , :class=>"form-control" %>
      </div>
    </div><!--full_blog-->

    <div class="full_gig_blog">
      <div class="fields">
        <%= f.submit "Send me reset password instructions", :class=>"btn btn-success" %> OR 
        <%= render "devise/shared/links" %>
      </div>
    </div><!--full_blog-->
  <% end %>

</div><!-- 9 col-->   


